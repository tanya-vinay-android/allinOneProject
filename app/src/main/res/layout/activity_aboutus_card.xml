<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/add_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/member_image_about"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="@id/cardview_about"
        app:layout_constraintStart_toStartOf="@id/cardview_about"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/freshlybuilt"
        android:elevation="8dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp"
        android:translationZ="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/name_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:text="Vinay Kumar"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/skills_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_about"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:text="Android Developer"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/college_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/skills_about"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="Student G.B Pant Govt Engineering College"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/linkedin_about"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/college_about"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:elevation="6dp"
                android:translationZ="4dp"
                android:padding="2dp"
                android:src="@drawable/ic_linkedin"
               />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>