<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="5dp"
    android:background="@color/colorWhite"
    android:backgroundTint="@color/colorWhite"


    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:translationZ="4dp"
        app:cardCornerRadius="20dp"
        android:background="@color/colorWhite">
    <LinearLayout
        android:id="@+id/linear_layout_border"
        android:layout_width="match_parent"
        android:background="@color/colorBlack"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
            android:translationZ="6dp"
        android:focusable="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="5dp">
            <LinearLayout
                android:id="@+id/ll"
                app:layout_constraintTop_toTopOf="@id/parent"
                app:layout_constraintRight_toRightOf="@id/parent"
                app:layout_constraintLeft_toLeftOf="@id/parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:padding="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/author_ques"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/prof"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/ll_quesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                    android:id="@+id/question_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="error in loading the question"
                    android:textSize="17sp"
                        android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    />
                <TextView
                    android:id="@+id/ques_title_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DATE"
                    android:gravity="end"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="error in loading the question"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        />
                    <TextView
                        android:id="@+id/ques_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DATE"
                        android:gravity="end"
                        android:layout_marginRight="20dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingTop="8dp"
                android:id="@+id/expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ll"
                app:layout_constraintBottom_toBottomOf="@+id/parent"
                app:layout_constraintLeft_toLeftOf="@id/parent"
                app:layout_constraintRight_toRightOf="@id/parent">
                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintRight_toRightOf="@id/expandable_layout"
                    app:layout_constraintLeft_toLeftOf="@id/expandable_layout"
                    app:layout_constraintTop_toTopOf="@id/expandable_layout"
                    android:background="@color/colorBlack"
                    android:layout_marginLeft="50dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:id="@+id/cardview_answer"
                    android:layout_height="40dp"
                    app:cardElevation="6dp"
                    app:layout_constraintLeft_toLeftOf="@id/expandable_layout"
                    app:layout_constraintTop_toBottomOf="@id/view"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="20dp">
                    <ImageView

                        android:id="@+id/author_ans"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/prof"/>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/answer"
                    app:layout_constraintLeft_toRightOf="@id/cardview_answer"
                    app:layout_constraintRight_toRightOf="@id/expandable_layout"
                    app:layout_constraintTop_toTopOf="@id/view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"
                    android:text="Error in loading answer"
                    android:textColor="@color/colorLightBlue"/>
                <TextView
                    android:id="@+id/date_ans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"
                    android:text="date"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    app:layout_constraintLeft_toRightOf="@id/cardview_answer"
                    app:layout_constraintRight_toRightOf="@id/expandable_layout"
                    app:layout_constraintTop_toBottomOf="@id/answer" />

                
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>